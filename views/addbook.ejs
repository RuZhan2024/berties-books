<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><%= shopData.shopName %> — Add Book</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body>
    <header class="container">
      <h1>Bertie’s Books: Add Book</h1>
      <p><a href="/">← Back home</a></p>
    </header>

    <main class="container">
      <!-- NOTE: relative action 'bookadded' resolves to /books/bookadded -->
      <form action="bookadded" method="post" class="form card">
        <label>Book name
          <input id="book_name" name="name" type="text" required />
        </label>
        <label>Price (£)
          <input id="price" name="price" type="number" min="0" step="0.01" required />
        </label>
        <button type="submit" class="btn">Add Book</button>
      </form>
    </main>
  </body>
</html>
