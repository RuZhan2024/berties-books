<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>All Books</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <main class="container">
    <h1>All Books</h1>
    <p><a href="/">← Back home</a></p>

    <% if (!availableBooks || availableBooks.length === 0) { %>
      <p>No books found.</p>
    <% } else { %>
      <table class="table">
        <thead>
          <tr><th>#</th><th>Title</th><th>Price (£)</th></tr>
        </thead>
        <tbody>
        <% availableBooks.forEach((b, i) => { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= b.name %></td>
            <td><%= Number(b.price).toFixed(2) %></td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    <% } %>
  </main>
</body>
</html>
